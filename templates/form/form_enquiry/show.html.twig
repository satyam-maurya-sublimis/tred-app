{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>

            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="row">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                        <tr>
                            <th class="col-sm-1">{{ 'label.name'|trans }}</th>
                            <td class="col-sm-2">{{ data.mstSalutation|default('') }} {{ data.residentialEnquiryFirstName|default('') }} {{ data.residentialEnquiryMiddleName|default('') }} {{ data.residentialEnquiryLastName|default('') }}</td>
                            <th class="col-sm-1">{{ 'label.mobile'|trans }}</th>
                            <td class="col-sm-2">{{ data.residentialEnquiryMobileNumber|default('-') }}</td>
                            <th class="col-sm-1">{{ 'label.email'|trans }}</th>
                            <td class="col-sm-2"><a href="mailto:{{data.residentialEnquiryEmailAddress}}">{{ data.residentialEnquiryEmailAddress|default('-')}}</a></td>
                            <th>{{ 'label.phone'|trans }}</th>
                            <td>{{ data.residentialEnquiryPhoneNumber|default('-') }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.lead_status'|trans }}</th>
                            <td>{{ data.mstLeadStatus.leadStatus }}</td>
                            <th>{{ 'label.description'|trans }}</th>
                            <td colspan="5">{{ data.residentialEnquiryDescription|default('-') }}</td>
                        </tr>
                          <tr>
                            <th colspan="8">Address Information</th>
                        </tr>
                        <tr>
                            <th>{{ 'label.addressOne'|trans }}</th>
                            <td>{{ data.residentialEnquiryAddressOne|default('-') }}</td>
                            <th>{{ 'label.addressTwo'|trans }}</th>
                            <td> {{ data.residentialEnquiryAddressTwo|default('-') }}</td>
                            <th>{{ 'label.pincode'|trans }}</th>
                            <td>{{ data.residentialEnquiryPincode|default('-') }}</td>
                            <th>{{ 'label.city'|trans }}</th>
                            <td>{{ data.mstCity|default('-') }}</td>
                        </tr>
                            <tr>

                                <th>{{ 'label.state'|trans }}</th>
                                <td>{{ data.mstState|default('-') }}</td>
                                <th>{{ 'label.country'|trans }}</th>
                                <td colspan="5">{{ data.mstCountry|default('-') }}</td>
                            </tr>
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_SYS_ADMIN') %}
        <div class="card-footer">
            {{ include('form/_delete_form.html.twig') }}
        </div>
    {% endif %}
    <br>
{% endblock %}
