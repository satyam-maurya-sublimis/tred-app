{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="card-header mt-2">
                        <h3 class="card-title">{{ 'VENDOR / PARTNER USER'|upper }}</h3>
                    </div>
                    <div class="row">
                        <table class="table table-responsive-md text-sm">
                            <tbody>
                            <tr>
                                <th>{{ 'label.vendor_partner_name'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.trnVendorPartnerDetails }}</td>
                                <th>{{ 'label.office_name'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.trnVendorPartnerOffices }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.office_category'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.trnVendorPartnerOffices.mstOfficeCategory }}</td>
                                <th>{{ 'label.username'|trans }}</th>
                                <td colspan="3">{{ data.userName }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.designation'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.mstDesignation }}</td>
                                <th>{{ 'label.name'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.mstSalutation }} {{ data.appUserInfo.userFirstName }} {{ data.appUserInfo.userLastName }} </td>
                            </tr>
                            <tr>
                                <th>{{ 'label.email'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.userEmail }}</td>
                                <th>{{ 'label.mobile'|trans }}</th>
                                <td colspan="3">{{ data.appUserInfo.mobileNoCountryCode }} {{ data.appUserInfo.userMobileNumber }} </td>
                            </tr>
                            <tr>
                                <th>{{ 'label.enable_access_to_vendor_portal'|trans }}</th>
                                <td colspan="7">{{ data.appUserInfo.isAccessToVendorPortal ? 'Yes' : 'No' }}</td>
                            </tr>
                            </tbody>
                        </table>

                    </div>
                    <div class="card-header mt-2">
                        <h3 class="card-title">{{ 'User Profile Pic'|upper }}</h3>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            {% if data.appUserInfo is defined and data.appUserInfo is not empty and data.appUserInfo
                                .userAvatarImagePath is not empty and data.appUserInfo.userAvatarImagePath != '' and data.appUserInfo.userAvatarImagePath != 'users/' %}
                                <img src="{{ data.appUserInfo.userAvatarImagePath|imagine_filter('resize_image_200') }}" alt="logo"> {% endif %}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <br>
{% endblock %}
