{% extends 'base.html.twig' %}
{% block title %} {{ 'title.app'|trans }} - {{ 'title.login'|trans }} {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="{{ asset('assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css') }}">
{% endblock %}
{% block body %}
<body class="hold-transition login-page">
<!-- MAIN_CONTENT starts -->
<div class="main-content">
    <div class="container">
        <div class="row">
            <div class="col cust-col">
                <div class="login-box">
                    <h4>To reset your password, please provide your username.</h4>
                    <br>
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} background-{{ label }} text-center" >

                                {{ message|trans}}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <div class="mb-3">
                        {{ form_row(form.userName) }}
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button type="submit" class="btn btn-primary btn-blue">{{'action.reset_password'|trans}}</button>
                        </div>
                        <!-- /.col -->
                    </div>
                    {{ form_end(form) }}
                    <br>
                    <p class="mb-1">
                        <a href="{{ path('login') }}" class="btn btn-link">Back to login</a>
                    </p>
                </div>
            </div>
        </div>
        <!-- /.login-box -->
    </div>
</div>
<footer>
    <span class="text-sm-center">Copyright &copy; {{ 'now'|date('Y') }} | {{'title.app'|trans}}</span>
</footer>
{% endblock %}
