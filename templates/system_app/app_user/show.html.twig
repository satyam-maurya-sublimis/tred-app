{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
        <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
        <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>

    </h4>
    </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                            <tr>
                                <th>{{'label.username'|trans}}</th>
                                <td>{{ data.userName }}</td>
                                <th>{{'label.email'|trans}}</th>
                                <td>{{ data.appUserInfo.userEmail }}</td>
                                <th>{{'label.role'|trans}}</th>
                                <td>{% for role in data.userRole %} &#187; {{ role }}<br> {% endfor %}</td>
                                <th>{{'label.name'|trans}}</th>
                                <td>{{ data.appUserInfo.userFirstName }} {{ data.appUserInfo.userMiddleName }} {{ data.appUserInfo.userLastName }}</td>
                            </tr>
                            <tr>
                                <th>{{'label.is_active'|trans}}</th>
                                <td colspan="7">{{ data.isActive ? 'Yes' : 'No' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        {{ include('form/_delete_form.html.twig') }}
    </div>
<br>
{% endblock %}
