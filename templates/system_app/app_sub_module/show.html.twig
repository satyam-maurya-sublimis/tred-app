{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}/?appmodule_id={{ app.request.get('appmodule_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}?appmodule_id={{ app.request.get('appmodule_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
                
            </h4>
        </div>
    </div>
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="card-body">
                <table class="table table-responsive-md text-sm">
                    <tbody>
                    <tr>
                        <th>{{'label.submodule'|trans}}</th>
                        <td>{{ data.subModuleName }}</td>
                        <th>{{'label.value'|trans}}</th>
                        <td>{{ data.subModuleValue }}</td>
                        <th>{{'label.submodule.subModuleParentValue'|trans}}</th>
                        <td>{{ data.subModuleParentValue }}</td>
                        <th>{{'label.submodule.subModuleStatic'|trans}}</th>
                        <td>{{ data.subModuleStatic ? 'Yes' : 'No' }}</td>
                    </tr>
                    <tr>
                        <th>{{'label.submodule.subModuleDisplayMenu'|trans}}</th>
                        <td>{{ data.subModuleDisplayMenu ? 'Yes' : 'No' }}</td>
                        <th>{{'label.parentId'|trans}}</th>
                        <td>{{ data.parentId }}</td>
                        <th>{{'label.is_child'|trans}}</th>
                        <td>{{ data.isChildMenu ? 'Yes' : 'No' }}</td>
                        <th>{{'label.role'|trans}}</th>
                        <td>{% for role in data.appRole %} {{ role}}<br> {% endfor %}</td>
                    </tr>
                    <tr>
                        <th>{{'label.seq_no'|trans}}</th>
                        <td>{{ data.sequenceNo }}</td>
                        <th>{{'label.is_active'|trans}}</th>
                        <td colspan="5">{{ data.isActive ? 'Yes' : 'No' }}</td>
                    </tr>
                </tbody>
            </table>
            </div>
        </div>
    </div>
</div>
    <div class="card-footer">
        {{ include('form/_delete_form.html.twig') }}
    </div>
                <br>
{% endblock %}
