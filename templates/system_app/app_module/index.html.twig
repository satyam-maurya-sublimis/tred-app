{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><a href="{{ path(path_add) }}" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> {{label_title|trans}}</a></h4>
                </div>
                <nav class="card-content collapse show">
                    <div class="card-body card-dashboard ">
                        <table id="dataTable" class="table table-responsive-md table-sm text-sm">
                            <thead>
                            <tr>
                                <th>{{'label.module'|trans|upper}}</th>
                                <th>{{'label.value'|trans|upper}}</th>
                                <th>{{'label.is_active'|trans|upper}}</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for app_module in app_modules %}
                                <tr>
                                    <td><a href="{{ path('system_submodule_index', {'appmodule_id': app_module.id}) }}">{{ app_module.moduleName }}</a></td>
                                    <td>{{ app_module.moduleValue }}</td>
                                    <td>{{ app_module.isActive ? 'Yes' : 'No' }}</td>
                                    <td>
                                        <div class="btn-group-toggle" role="group" aria-label="Action Buttons">
                                        <a href="{{ path(path_show, {'id': app_module.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-expand"></i></button></a>&nbsp;
                                        <a href="{{ path(path_edit, {'id': app_module.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i></button></a>&nbsp;
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">{{'info.no_record_found'|trans}}</td>
                                </tr>
                            {% endfor %}
                            </tbody></table>
                    </div>
