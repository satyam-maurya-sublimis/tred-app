{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>
                
            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <table class="table table-responsive-md text-sm">
                        <tbody>
                            <tr>
                                <th class="col-sm-1">{{'label.role'|trans}}</th>
                                <td class="col-sm-2">{{ data.roleName }}</td>
                                <th class="col-sm-1">{{'label.description'|trans}}</th>
                                <td class="col-sm-2">{{ data.roleDescription }}</td>
                                <th class="col-sm-1">{{'label.enable_for_organization'|trans}}</th>
                                <td class="col-sm-2">{{ data.isOrgEnabled ? 'Yes' : 'No' }}</td>
                                <th class="col-sm-1">{{'label.is_active'|trans}}</th>
                                <td class="col-sm-2">{{ data.isActive ? 'Yes' : 'No' }}</td>
                            </tr>
                         </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="card-footer">
        {{ include('form/_delete_form.html.twig') }}
    </div>
    <br>
{% endblock %}
