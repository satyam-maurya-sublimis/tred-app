{% extends 'layout/content.html.twig' %}
{% block cms_content %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><a href="{{ path(path_add) }}" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> {{label_title|trans}}</a></h4>
                </div>
                <nav class="card-content collapse show">
                    <div class="card-body card-dashboard ">
                        <table id="dataTable" class="table table-responsive-md table-sm text-sm">
                            <thead>
                            <tr>
                                <th>{{ 'label.product_type'|trans }}</th>
                                <th>{{ 'label.product_name'|trans }}</th>
                                <th>{{ 'label.color'|trans }}</th>
                                <th>{{ 'label.furniture_finish'|trans }}</th>
                                <th>{{ 'label.brand'|trans }}</th>
                                <th>{{ 'label.currency'|trans }}</th>
                                <th>{{ 'label.price'|trans }}</th>
                                <th>{{ 'label.is_active'|trans }}</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for furniture in furnitures %}
                                <tr>
                                    <td>{{ furniture.mstProductType }}</td>
                                    <td>{{ furniture.catalogName }}</td>
                                    <td>{{ furniture.prdColor|join(',') }}</td>
                                    <td>{{ furniture.mstFurnitureFinish }}</td>
                                    <td>{{ furniture.prdBrand }}</td>
                                    <td>{{ furniture.mstCurrency }}</td>
                                    <td>{{ furniture.furniturePrice }}</td>
                                    <td>{{ furniture.isActive ? 'Yes' : 'No' }}</td>
                                    <td>
                                        <div class="btn-group-toggle" role="group" aria-label="Action Buttons">
                                            <a href="{{ path(path_edit, {'id': furniture.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i></button></a>
                                            <a href="{{ path(path_media, {'furniture_product_catalog_id': furniture.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-photo-video"></i></button></a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">{{'info.no_record_found'|trans}}</td>
                                </tr>
                            {% endfor %}
                            </tbody></table>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="text-muted"><span class="domrecord"></span></div>
                            </div>
                            <div class="col-sm-7">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-end">
                                        <li class="dompage"></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}