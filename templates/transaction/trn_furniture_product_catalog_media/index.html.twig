{% extends 'layout/content.html.twig' %}
{% block cms_content %}
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"><a href="{{ path(path_add) }}/?furniture_product_catalog_id={{ app.request.get('furniture_product_catalog_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> {{label_title|trans}}</a></h4>
            </div>
            <div class="card-header">
                <h4 class="card-title">{{ label_heading|trans|upper }} : {{ trnFurnitureProductCatalog.mstProductType }} &#187; {{ trnFurnitureProductCatalog.catalogName }}</h4>
            </div>
            <nav class="card-content collapse show">
                <div class="card-body card-dashboard ">
                    <table id="dataTable" class="table table-responsive-md table-sm text-sm">
                        <thead>
                        <tr>
                            <th>{{ 'label.media'|trans|upper }}</th>
                            <th>{{ 'label.name'|trans|upper }}</th>
                            <th>{{ 'label.type'|trans|upper }}</th>
                            <th>{{ 'label.alt'|trans|upper }}</th>
                            <th>{{ 'label.embedded_url'|trans|upper }}</th>
                            <th>{{ 'label.position'|trans|upper }}</th>
                            <th>{{ 'label.is_active'|trans|upper }}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for media in medias %}
                        <tr>
                            <td><img src="{{ media.mediaFilePath|imagine_filter('resize_image_100') }}" alt=".."></td>
                            <td>{{ media.mediaName }}</td>
                            <td>{{ media.mediaType }}</td>
                             <td>{{ media.mediaAlText }}</td>
                            <td> {% if media.mediaPath is not empty %}{{ media.mediaPath }}{% endif %}</td>
                            <td>{{ media.position }}</td>
                            <td>{{ media.isActive ? 'Yes' : 'No' }}</td>
                            <td>
                                <div class="btn-group-toggle" role="group" aria-label="Action Buttons">
                                    <a href="{{ path(path_show, {'id': media.id}) }}/?furniture_product_catalog_id={{ app.request.get('furniture_product_catalog_id') }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-expand"></i></button></a>&nbsp;
                                    <a href="{{ path(path_edit, {'id': media.id}) }}/?furniture_product_catalog_id={{ app.request.get('furniture_product_catalog_id') }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i></button></a>&nbsp;
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">{{'info.no_record_found'|trans}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-sm-5">
                            <div class="text-muted"><span class="domrecord"></span></div>
                        </div>
                        <div class="col-sm-7">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-end">
                                    <li class="dompage"></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
{% endblock %}
