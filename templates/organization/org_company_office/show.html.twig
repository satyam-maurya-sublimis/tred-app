{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}?company_id={{ app.request.get('company_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}?company_id={{ app.request.get('company_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>

            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="row">
                        <table class="table table-responsive-md text-sm">
                            <tbody>
                            <tr>
                                <th class="col-sm-1">{{ 'label.company'|trans }}</th>
                                <td class="col-sm-2" colspan="3">{{ data.orgCompany }}</td>
                                <th class="col-sm-1">{{ 'label.office'|trans }}</th>
                                <td class="col-sm-2" colspan="3">{{ data.office }}</td>
                            </tr>
                            <tr>
                                <th class="col-sm-1">{{ 'label.office_category'|trans }}</th>
                                <td class="col-sm-2">{{ data.mstOfficeCategory }}</td>
                                <th class="col-sm-1">{{ 'label.addressOne'|trans }}</th>
                                <td class="col-sm-2">{{ data.officeAddressOne }}</td>
                                <th class="col-sm-1">{{ 'label.addressTwo'|trans }}</th>
                                <td class="col-sm-2">{{ data.officeAddressTwo }}</td>
                                <th class="col-sm-1">{{ 'label.pincode'|trans }}</th>
                                <td class="col-sm-2">{{ data.officePincode }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.city'|trans }}</th>
                                <td>{{ data.mstCity }}</td>
                                <th>{{ 'label.state'|trans }}</th>
                                <td>{{ data.mstState }}</td>
                                <th>{{ 'label.country'|trans }}</th>
                                <td>{{ data.mstCountry }}</td>
                                <th>{{ 'label.timezone'|trans }}</th>
                                <td>{{ data.officeTimeZone }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.email'|trans }}</th>
                                <td><a href="mailto:{{ data.officeEmail }}">{{ data.officeEmail }}</a></td>
                                <th>{{ 'label.telephone'|trans }}</th>
                                <td><a href="tel:+{{ data.mstcountry.phoneCode }}{{ data.officeTelNumber }}">+{{ data.mstcountry.phoneCode }} {{ data.officeTelNumber }}</a></td>
                                <th>{{ 'label.fax'|trans }}</th>
                                <td colspan="3">{{ data.officeFaxNumber }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.is_active'|trans }}</th>
                                <td colspan="7">{{ data.isActive ? 'Yes' : 'No' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_SYS_ADMIN') %}
        <div class="card-footer">
            {{ include('form/_delete_form.html.twig') }}
        </div>
    {% endif %}
    <br>
{% endblock %}
