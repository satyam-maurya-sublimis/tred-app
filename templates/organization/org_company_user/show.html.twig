{% extends 'layout/content.html.twig' %}

{% block cms_content %}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title float-right">
                <a href="{{ path(path_edit, {'id': data.id}) }}?company_id={{ app.request.get('company_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i> {{'label.edit'|trans}}</a>
                <a href="{{ path(path_index) }}?company_id={{ app.request.get('company_id') }}" class="btn btn-dark btn-sm"><i class="fa fa-list"></i> {{'label.back_to_list' | trans}}</a>

            </h4>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="card-body">
                    <div class="row">
                        <table class="table table-responsive-md text-sm">
                            <tbody>
                            <tr>
                                <th class="col-sm-1">{{ 'label.username'|trans }}</th>
                                <td class="col-sm-2">{{ data.userName }}</td>
                                <th class="col-sm-1">{{ 'label.name'|trans }}</th>
                                <td class="col-sm-2">{{ data.appUserInfo.userFirstName }} {{ data.appUserInfo.userMiddleName|default('') }} {{ data.appUserInfo.userLastName|default('') }}</td>
                                <th class="col-sm-1">{{ 'label.email'|trans }}</th>
                                <td class="col-sm-2">{{ data.appUserInfo.userEmail }}</td>
                                <th class="col-sm-1">{{ 'label.mobile'|trans }}</th>
                                <td class="col-sm-2">{{ data.appUserInfo.userMobileNumber }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.usercategory'|trans }}</th>
                                <td>{{ data.appUserCategory }}</td>
                                <th>{{ 'label.role'|trans }}</th>
                                <td>{% for role in data.userRole %} {{ role }}<br>{% endfor %}</td>
                                <th>{{ 'label.company'|trans }}</th>
                                <td>{{ data.appUserInfo.orgCompany }}</td>
                                <th>{{ 'label.office'|trans }}</th>
                                <td>{{ data.appUserInfo.orgCompanyOffice }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'label.is_active'|trans }}</th>
                                <td colspan="7">{{ data.isActive ? 'Yes' : 'No' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if is_granted('ROLE_SYS_ADMIN') %}
        <div class="card-footer">
            {{ include('form/_delete_form.html.twig') }}
        </div>
    {% endif %}
    <br>
{% endblock %}
