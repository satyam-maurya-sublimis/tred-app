{% extends 'layout/content.html.twig' %}
{% block cms_content %}
<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                    <h4 class="card-title"><a href="{{ path(path_add) }}" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> {{label_title|trans}}</a></h4>
            </div>
            <nav class="card-content collapse show">
                <div class="card-body card-dashboard ">
                    <div class="row">
                        <div class="col-sm-3">
                            <select id="countryId" name="countryId" class="form-control custom-select country">
                                <option value="">Select Country....</option>
                                {% set countries = get_country_list() %}
                                {% for country in countries %}
                                    <option value="{{country.id}}" {% if country.id == app.request.query.get('country_id') %} selected {% endif %}>
                                        {{country.country}}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    {# start show the state data#}
                    <div class="mt-2 stateListing"><img src="{{ asset('assets/img/loading_lines.gif') }}" class="loading" alt="loading" style="display: none">
                    </div>
                    {# end the state data#}
                </div>
            </nav>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{asset('assets/plugins/datatables/jquery.dataTables.min.js')}}"></script>
    <script src="{{ asset('assets/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('assets/plugins/datatables-responsive/js/responsive.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('assets/js/master/mst_state/index.js') }}"></script>
{% endblock %}