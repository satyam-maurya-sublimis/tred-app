{% extends 'layout/content.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/plugins/summernote/summernote-bs4.css') }}" media="all" rel="stylesheet" type="text/css" />
{% endblock %}
{% block cms_content %}
    {% set back_to_list = app.request.server.get('HTTP_REFERER') %}
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                {% if mode == 'add' %}<i class="fa fa-plus"></i> {% else%} <i class="fa fa-edit"></i> {% endif%}  <b>{{label_title|trans|upper}}</b>
            </h5>
        </div>
        <div class="card-header">
            <h4 class="card-title">{{ label_heading|trans|upper }} : {% if article.articleTitle is not empty%} {{ article.articleTitle  }} {% else %} {{ article.articleFor  }} {% endif %}</h4>
        </div>
        {{ form_start(form) }}
        <div class="card-body">
            <div class="row">
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.articleComment) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_row(form.commentorName) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.commentorEmail) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.commentorWebsite) }}
                </div>
                <div class="col-sm-3">
                    {{ form_row(form.mstRating) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    {{ form_row(form.isApproved) }}
                </div>

            </div>
        </div>
    </div>
        <div class="card-footer">
            <button type="submit" class="{{ button_css|default("btn btn-dark btn-sm") }}">
                <i class="fa fa-save" aria-hidden="true"></i> {{ label_button|trans }}
            </button>
            <a href="{{ back_to_list }}" class="btn btn-link"><i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}</a>
        </div>
        {{ form_end(form) }}
    <br>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/plugins/summernote/summernote-bs4.min.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            // Summernote
            $('.textarea').summernote();
        });
    </script>
{% endblock %}



