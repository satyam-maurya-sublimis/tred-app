{% extends 'layout/content.html.twig' %}
{% block cms_content %}

    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><a href="{{ path(path_add) }}" class="btn btn-dark btn-sm"><i class="fa fa-plus"></i> {{label_title|trans}}</a></h4>
                </div>
                <nav class="card-content collapse show">
                    <div class="card-body card-dashboard ">
                        <table id="dataTable" class="table table-responsive-md table-sm text-sm">
                            <thead>
                            <tr>
                                <th>{{ 'label.id'|trans|upper }}</th>
                                <th>{{ 'label.name'|trans|upper }}</th>
                                <th>{{ 'label.slug_name'|trans|upper }}</th>
                                <th>{{ 'label.routing'|trans|upper }}</th>
                                <th>{{ 'label.parent_page'|trans|upper }}</th>
                                <th>{{ 'label.product'|trans|upper }}</th>
                                <th>{{ 'label.is_active'|trans|upper }}</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for cms_page in cms_pages %}
                            <tr>
                                <td>{{ cms_page.id }}</td>
                                <td>{{ cms_page.pageName }}</td>
                                <td>{{ cms_page.pageSlugName }}</td>
                                <td>{{ cms_page.pageRoute }}</td>
                                <td>{{ cms_page.parentId }}</td>
                                <td>{{ cms_page.prdProduct }}</td>
                                <td>{{ cms_page.isActive ? 'Yes' : 'No' }}</td>
                                <td>
                                    <div class="btn-group-toggle" role="group" aria-label="Action Buttons">
                                        <a href="{{ path(path_show, {'id': cms_page.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-expand"></i></button></a>
                                        <a href="{{ path(path_edit, {'id': cms_page.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-edit"></i></button></a>&nbsp;
                                        <a href="{{ path(path_banner, {'page_id': cms_page.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-photo-video"></i></button></a>&nbsp;
                                        <a href="{{ path(path_advertisement, {'page_id': cms_page.id}) }}"><button type="button" class="btn btn-dark btn-sm"><i class="fa fa-ad"></i></button></a>&nbsp;
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8">{{'info.no_record_found'|trans}}</td>
                            </tr>
                        {% endfor %}
                        </tbody></table>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="text-muted"><span class="domrecord"></span></div>
                            </div>
                            <div class="col-sm-7">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-end">
                                        <li class="dompage"></li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
